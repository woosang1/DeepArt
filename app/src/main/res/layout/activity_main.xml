<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--  Bg 배경      -->
        <ImageView
            android:id="@+id/bgImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="left"
                    android:background="#00ff0000"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_name_trans" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <com.cunoraz.gifview.library.GifView
                    android:id="@+id/gif1"
                    android:layout_width="500dp"
                    android:layout_height="50dp"
                    app:gif="@drawable/gif2" />

                <ImageView
                    android:id="@+id/style_id"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/optionId"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:background="#00ff0000"
                    android:scaleType="centerCrop"
                    android:src="@drawable/option_circle4" />
            </LinearLayout>

            <!--  썸네일   -->
            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="525dp"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/background5" />

            <!--  필터 사진   -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/styleRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="40dp"/>

            <!--  하단 메뉴    -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:paddingBottom="3dp"
                android:weightSum="5">

                <ImageButton
                    android:id="@+id/cameraBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="#00ff0000"
                    android:scaleType="fitXY"
                    android:src="@drawable/camera_circle2" />

                <ImageButton
                    android:id="@+id/galleryBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_weight="1"
                    android:background="#00ff0000"
                    android:scaleType="fitXY"
                    android:src="@drawable/gall_circle2" />

                <ImageButton
                    android:id="@+id/editBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_weight="1"
                    android:background="#00ff0000"
                    android:scaleType="fitXY"
                    android:src="@drawable/edit_circle2" />

                <ImageButton
                    android:id="@+id/saveBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_weight="1"
                    android:background="#00ff0000"
                    android:scaleType="fitXY"
                    android:src="@drawable/download_cirlce2" />


                <ImageButton
                    android:id="@+id/communityBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_marginStart="30dp"
                    android:background="#00ff0000"
                    android:scaleType="fitXY"
                    android:src="@drawable/people_circle2" />

            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</layout>
